<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".StartScreen">

  <Button
    android:id="@+id/signInBtn"
    android:layout_width="350dp"
    android:layout_height="50dp"
    android:background="@color/buttonColor"
    android:text="@string/common_signin_button_text"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.648" />

  <Button
    android:id="@+id/signUpBtn"
    android:layout_width="350dp"
    android:layout_height="50dp"
    android:background="@color/buttonColor"
    android:text="sign up"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.789" />

  <ImageView
    android:id="@+id/signImg1"
    android:layout_width="461dp"
    android:layout_height="299dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    app:srcCompat="@drawable/signimg1" />

  <ImageView
    android:id="@+id/signImg2"
    android:layout_width="247dp"
    android:layout_height="420dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.528"
    app:srcCompat="@drawable/signimg2" />

  <ImageView
    android:id="@+id/signImg3"
    android:layout_width="252dp"
    android:layout_height="299dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.525"
    app:srcCompat="@drawable/signmg3" />

  <ImageView
    android:id="@+id/signImg4"
    android:layout_width="508dp"
    android:layout_height="273dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.997"
    app:srcCompat="@drawable/signimg4" />

</androidx.constraintlayout.widget.ConstraintLayout>
